{
  "devDependencies": {
    "@babel/cli": "^7.24.5",
    "@babel/core": "^7.24.5",
    "@commitlint/config-conventional": "^11.0.0",
    "@swc/core": "^1.10.6",
    "@types/jest": "^28.0.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vitest/coverage-v8": "^3.0.5",
    "@vitest/ui": "^3.0.5",
    "commitlint": "^19.7.1",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^9.1.7",
    "jest": "^29.0.0",
    "jest-junit": "^16.0.0",
    "jest-runner-eslint": "^2.0.0",
    "jest-runner-prettier": "^1.0.0",
    "prettier": "^3.5.2",
    "prettier-plugin-jsdoc": "^0.3.33",
    "prettier-plugin-sort-json": "^0.0.2",
    "prettier-plugin-tailwindcss": "^0.5.12",
    "svgo": "^2.8.0",
    "ts-jest": "^28.0.0",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  },
  "private": true,
  "scripts": {
    "test": "vitest",
    "lint": "eslint --ext js,jsx,ts,tsx --fix .",
    "lint:cached": "eslint --ext js,jsx,ts,tsx --cache .",
    "lint:ci": "cross-env NODE_OPTIONS=--max-old-space-size=4096 yarn lint",
    "lint:files": "jest -c jest-prettier.config.js",
    "lint:files:fix": "prettier --write .",
    "clean": "yarn foreach --jobs 4 run clean",
    "type-check": "tsc -b tsconfig.solution.json",
    "type-check:ci": "NODE_OPTIONS=--max-old-space-size=5120 yarn type-check",
    "optimise:svg": "yarn svgo --folder apps --exclude \"[a-z0-9]{20}\" \"arrow-graph.svg\" --recursive",
    "prepare": "husky",
    "start:frontend": "yarn workspace @monorepo/client dev"
  },
  "workspaces": ["apps/**/*"],
  "name": "monorepo"
}
