{
  "devDependencies": {
    "@babel/cli": "^7.24.5",
    "@babel/core": "^7.24.5",
    "@commitlint/config-conventional": "^11.0.0",
    "@swc/core": "^1.10.6",
    "@types/jest": "^28.0.0",
    "@vitest/coverage-v8": "^3.0.5",
    "@vitest/ui": "^3.0.5",
    "commitlint": "^19.7.1",
    "concurrently": "^8.0.1",
    "eslint": "^8.0.0",
    "eslint-plugin-i18n-json": "^4.0.0",
    "eslint-plugin-i18next": "^6.0.3",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "husky": "^9.1.7",
    "jest": "^29.0.0",
    "jest-junit": "^16.0.0",
    "jest-runner-eslint": "^2.0.0",
    "jest-runner-prettier": "^1.0.0",
    "prettier": "^2.8.5",
    "prettier-plugin-jsdoc": "^0.3.33",
    "prettier-plugin-sort-json": "^0.0.2",
    "svgo": "^2.8.0",
    "ts-jest": "^28.0.0",
    "typescript": "^5.0.3",
    "vitest": "^3.0.5"
  },
  "private": true,
  "scripts": {
    "test": "vitest",
    "lint": "jest -c jest-eslint.config.js --maxWorkers 4 --forceExit .",
    "lint:cached": "eslint --ext js,jsx,ts,tsx --cache --ignore-path .gitignore .",
    "lint:ci": "NODE_OPTIONS=--max-old-space-size=4096 yarn lint",
    "lint:files": "jest -c jest-prettier.config.js",
    "lint:files:fix": "prettier --write --ignore-path .gitignore .",
    "clean": "yarn foreach --jobs 4 run clean",
    "type-check": "tsc -b tsconfig.solution.json",
    "type-check:ci": "NODE_OPTIONS=--max-old-space-size=5120 yarn type-check",
    "optimise:svg": "yarn svgo --folder apps --exclude \"[a-z0-9]{20}\" \"arrow-graph.svg\" --recursive",
    "prepare": "husky"
  },
  "workspaces": [
    "frontend/*",
    "backend/*",
    "services/*"
  ],
  "nohoist": [
    "**/frontend",
    "**/backend",
    "**/services"
  ],
  "name": "workspace-root"
}
